{
    "rust-analyzer": {
        "enableCargoWatchOnStartup":true
    },
    "coc.preferences.rootPatterns": [".vim", ".git", ".hg", ".projections.json", "Cargo.toml", "Pipfile"],
    "languageserver": {
       "zls" : {
           "command": "/usr/bin/zls",
           "filetypes": ["zig"]
       },
       "haskell" :{
            "command": "haskell-language-server-wrapper",
            "args": ["--lsp"],
            "rootPatterns": ["*.cabal", "stack.yaml", "cabal.project", "package.yaml", "hie.yaml"],
            "filetypes": ["haskell", "lhaskell"]
        },

        "elixirLS": {
            "command": "elixir-ls",
            "filetypes": ["elixir", "eelixir", "ex", "exs"]
        }
   }
}
